<div class="bg-col-dark-app-200 h-screen font-manrope">
  <div class="min-h-full flex items-center justify-center py-12 px-4 sm:px-6 lg:px-8">
    <div class="max-w-md w-full space-y-8">
      <div>
        <%= auth_brand_logo %>
        <div class="mt-8 sm:mx-auto sm:w-full sm:max-w-md">
          <div class="bg-miru-white-1000 py-6 px-6 shadow sm:rounded-lg sm:px-10">
            <div class="space-y-3">
              <h2 class="text-xl font-sans font-medium tracking-normal text-miru-dark-purple-1000">
                Forgot Password
              </h2>
              <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
                <div class="field">
                  <label class="tracking-wider block text-sm font-semibold text-miru-dark-purple-1000">Enter your Registered Email ID</label>
                  <div class="mt-2">
                    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "rounded tracking-wider appearance-none border border-gray-100 block w-full px-3 py-2 bg-miru-gray-100 h-8 shadow-sm font-semibold text-xs text-miru-dark-purple-1000 focus:outline-none focus:ring-miru-gray-1000 focus:border-miru-gray-1000 sm:text-base" %>
                  </div>
                </div>
                <div class="actions mt-4">
                  <%= f.submit "SEND PASSWORD RESET LINK", class: "tracking-widest h-10 w-full flex justify-center py-1 px-4 border border-transparent shadow-sm text-base font-sans font-medium text-miru-white-1000 bg-miru-han-purple-1000 hover:bg-miru-han-purple-600 focus:outline-none rounded cursor-pointer" %>
                </div>
              <% end %>
              <%= render "devise/shared/links" %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
