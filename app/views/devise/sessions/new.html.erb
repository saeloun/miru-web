<div class="pt-10/100 px-10 xsm:px-20/100 sm:px-26/100 md:px-30/100 lg:px-32/100 xl:px-36/100">
  <div class="font-jakartasans">
    <%= render "devise/shared/header"%>
    <div class="p-5 2xl:p-10 shadow-xl rounded-lg">
      <h2 class="text-miru-black-1000 lg:mb-3 text-base font-medium">
        Sign In
      </h2>
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="field">
          <%= f.label :email, class: "text-xs text-miru-black-1000" %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "p-2 w-full bg-miru-grey-200 text-sm" %>
        </div>
        <div class="field">
          <%= f.label :password, class: "text-xs text-miru-black-1000" %><br />
          <%= f.password_field :password, autocomplete: "current-password", class: "p-2 w-full bg-miru-grey-200 text-sm" %>
        </div>
        <% if devise_mapping.rememberable? %>
          <%= begin %>
          <div class="field">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
          </div>
          <%= end %>
        <% end %>
        <div class="actions mt-3">
          <%= f.submit "SIGN IN", class: "p-2 w-full bg-miru-grey-400 font-bold text-white text-base hover:bg-miru-black-1000 cursor-pointer" %>
        </div>
      <% end %>
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
