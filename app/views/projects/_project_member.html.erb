<div class="field">
    <%= f.label "Team Members" %>
    <div class="mt-2 flex -space-x-px">
        <div class="mr-4 w-1/2 flex-1 min-w-0">
            <%= f.text_field :user_id, class: "form__input", list: 'first-name' %>
        </div>
        <datalist id="first-name">
            <% User.all.each do |user| %>
                <option value="<%= user.first_name %>"></option>
            <% end %>
        </datalist>

        <div class="w-1/2 flex-1 min-w-0">
            <%= f.text_field :hourly_rate, class: "form__input", placeholder: "Rate" %>
        </div>
    </div>
</div>