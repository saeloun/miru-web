<td id="avatar-<%= member.id %>" class="px-6 py-4 whitespace-nowrap">
  <%= image_tag user_avatar(member), class: "h-10 w-10 rounded-full" %>
</td>
<td id="full_name-<%= member.id %>" class="px-6 py-4 whitespace-nowrap">
  <div class="flex items-center">
    <div class="text-base font-semibold text-miru-dark-purple-1000">
      <%= member.full_name.capitalize %>
    </div>
  </div>
</td>
<td id="email-<%= member.id %>" class="px-6 py-4 whitespace-nowrap text-sm font-medium text-miru-dark-purple-1000">
  <% if member.unconfirmed_email? %>
    Current Email : <%= member.email %><br/>
    Changed Email : <%= member.unconfirmed_email %>
  <% else %>
    <%= member.email %>
  <% end %>
</td>
<td id="role-<%= member.id %>" class="px-6 py-4 whitespace-nowrap text-sm font-medium text-miru-dark-purple-1000">
  <%= member.primary_role.titlecase %>
</td>
<td id="pending-<%= member.id %>" class="px-6 py-4 whitespace-nowrap">
  <% if current_user.has_any_role?(:owner, :admin) %>
    <% if member.unconfirmed_email? %>
      <span class="px-2 inline-flex text-xs leading-5 tracking-wider font-semibold rounded-full bg-miru-han-purple-100 text-miru-han-purple-1000">
        RECONFIRMATION PENDING
      </span>
    <% else %>
      <% unless member.invitation_accepted? %>
        <% if (member.id != current_user.id) %>
          <span class="px-2 inline-flex text-xs leading-5 tracking-wider font-semibold rounded-full bg-miru-han-purple-100 text-miru-han-purple-1000">
            INVITATION PENDING
          </span>
        <% end %>
      <% end %>
    <% end %>
  <% end %>
</td>
<td id="full_name-<%= member.id %>" class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
  <% if current_user.has_any_role?(:owner, :admin) %>
    <%= link_to edit_team_path(member), remote: true do %>
      <img id="mid-<%= member.id %>" class="bottom" src="<%= image_url 'edit_image_button.svg' %>" onclick="openModal('another-modal')">
    <% end %>
  <% end %>
</td>
<td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
  <% if current_user.has_any_role?(:owner, :admin) %>
    <%= link_to image_tag("#{image_url 'delete_image_button.svg'}"),team_path(member), method: :delete, class: "font-medium h-10 w-10 text-lg leading-6 space-y-1 hover:border-2 hover:border-miru-han-purple-1000"%>
  <% end %>
</td>