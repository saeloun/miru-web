<%= form_with model: client, scope: :client, url: clients_path, method: :post do |f| %>
  <div class="mt-4">
    <div class="field">
      <div class="field_with_errors">
        <%= f.label t('client.name.label'), class: "form__label" %>
        <div class="tracking-wider block text-xs text-red-600">
          <%= error_message_on(f.object, :name) %>
        </div>
      </div>
      <div class="mt-1">
        <%= f.text_field :name, placeholder: t('client.name.placeholder'), autofocus: true, class: "form__input #{error_message_class(f.object, :name)}" %>
      </div>
    </div>
  </div>

  <div class="mt-4">
    <div class="field">
      <div class="field_with_errors">
        <%= f.label t('client.email.label'), class: "form__label" %>
        <div class="tracking-wider block text-xs text-red-600">
          <%= error_message_on(f.object, :email) %>
        </div>
      </div>
      <div class="mt-1">
        <%= f.text_field :email, placeholder: t('client.email.placeholder'), class: "form__input #{error_message_class(f.object, :email)}" %>
      </div>
    </div>
  </div>

  <div class="mt-4">
    <div class="field">
      <div class="field_with_errors">
        <%= f.label t('client.phone.label'), class: "form__label" %>
        <div class="tracking-wider block text-xs text-red-600">
          <%= error_message_on(f.object, :phone) %>
        </div>
      </div>
      <div class="mt-1">
        <%= f.text_field :phone, placeholder: t('client.phone.placeholder'), class: "form__input #{error_message_class(f.object, :phone)}" %>
      </div>
    </div>
  </div>

  <div class="mt-4">
    <div class="field">
      <div class="field_with_errors">
        <%= f.label t('client.address.label'), class: "form__label" %>
        <div class="tracking-wider block text-xs text-red-600">
          <%= error_message_on(f.object, :address) %>
        </div>
      </div>
      <div class="mt-1">
        <%= f.text_area :address, placeholder: t('client.address.placeholder'), class: "form__input_text_area #{error_message_class(f.object, :address)}" %>
      </div>
    </div>
  </div>

  <div class="mt-4">
    <div class="field">
      <div class="field_with_errors">
        <%= f.label t('client.country.label'), class: "form__label" %>
        <div class="tracking-wider block text-xs text-red-600">
          <%= error_message_on(f.object, :country) %>
        </div>
      </div>
      <div class="mt-1">
        <%= f.select :country, [[ "Please select", "", { selected: true, disabled: true }]] + ISO3166::Country.pluck(:alpha2, :name).collect { |c| [ c.second, c.first ] }, {}, { class: "form__input_select #{error_message_class(f.object, :country)}" } %>
      </div>
    </div>
  </div>

  <div class="mt-4">
    <div class="field">
      <div class="field_with_errors">
        <%= f.label t('client.timezone.label'), class: "form__label" %>
        <div class="tracking-wider block text-xs text-red-600">
          <%= error_message_on(f.object, :timezone) %>
        </div>
      </div>
      <div class="mt-1">
        <%= f.select :timezone, [[ "Please select", "", { selected: true, disabled: true }]] + TZInfo::Timezone.all_country_zones.collect { |t| [ t.to_s ] }, {}, { class: "form__input_select #{error_message_class(f.object, :timezone)}" } %>
      </div>
    </div>
  </div>

  <div class="actions mt-4">
    <%= f.submit t('client.add'), class: "form__submit"%>
  </div>

<% end %>
