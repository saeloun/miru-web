<%= form_with model: client, scope: :client, url: clients_path, method: :post do |f| %>
  <div class="mt-4">
    <div class="field">
      <div class="field_with_errors">
        <%= f.label :name, class: "tracking-wider block text-xs font-semibold text-miru-dark-purple-1000" %>
        <%= error_message_on(f.object, :name) %>
      </div>
      <div class="mt-1">
        <%= f.text_field :name, class: "#{error_message_class(f.object, :name)}" %>
      </div>
    </div>
  </div>

  <div class="mt-4">
    <div class="field">
      <div class="field_with_errors">
        <%= f.label :email, class: "tracking-wider block text-xs font-semibold text-miru-dark-purple-1000" %>
        <%= error_message_on(f.object, :email) %>
      </div>
      <div class="mt-1">
        <%= f.text_field :email, class: "#{error_message_class(f.object, :email)}" %>
      </div>
    </div>
  </div>

  <div class="mt-4">
    <div class="field">
      <div class="field_with_errors">
        <%= f.label :phone, class: "tracking-wider block text-xs font-semibold text-miru-dark-purple-1000" %>
        <%= error_message_on(f.object, :phone) %>
      </div>
      <div class="mt-1">
        <%= f.text_field :phone, class: "#{error_message_class(f.object, :phone)}" %>
      </div>
    </div>
  </div>

  <div class="mt-4">
    <div class="field">
      <div class="field_with_errors">
        <%= f.label :address, class: "tracking-wider block text-xs font-semibold text-miru-dark-purple-1000" %>
        <%= error_message_on(f.object, :address) %>
      </div>
      <div class="mt-1">
        <%= f.text_area :address, class: "#{error_message_class(f.object, :address)}" %>
      </div>
    </div>
  </div>

  <div class="actions mt-4">
    <%= f.submit "ADD CLIENT", class: "tracking-widest h-10 w-full flex justify-center py-1 px-4 border border-transparent shadow-sm text-base font-sans font-medium text-miru-white-1000 bg-miru-han-purple-1000 hover:bg-miru-han-purple-600 focus:outline-none rounded cursor-pointer"%>
  </div>

<% end %>
