<div class="pt-10/100 px-10 xsm:px-20/100 sm:px-26/100 md:px-30/100 lg:px-32/100 xl:px-36/100">
  <div class="font-jakartasans">
  <div class="p-5 2xl:p-10 shadow-xl rounded-lg">
      <h2 class="text-miru-black-1000 lg:mb-3 text-base font-black">
        Setup Org
      </h2>

Company Details<br>

Financial Details<br>

<%= form_with url: company_index_path, method: :post do |form| %>
  <%= form.label :company, class: "text-xs text-miru-black-1000" %>
  <%= form.text_field :company, class: "p-2 w-full bg-miru-grey-200 text-sm" %><br>
 
  <%= form.label :address, class: "text-xs text-miru-black-1000" %>
  <%= form.text_area :address, class: "p-2 w-full bg-miru-grey-200 text-sm" %><br>

  <%= form.label :business_phone, class: "text-xs text-miru-black-1000" %>
  <%= form.number_field :business_phone, class: "p-2 w-full bg-miru-grey-200 text-sm" %><br>

  <%= form.label :base_currency, class: "text-xs text-miru-black-1000" %>
  <%= form.text_field :base_currency, class: "p-2 w-full bg-miru-grey-200 text-sm" %><br> # Drop down - Check currency code in rails
  
  <%= form.label :standard_price, class: "text-xs text-miru-black-1000" %>
  <%= form.number_field :standard_rate, class: "p-2 w-full bg-miru-grey-200 text-sm" %><br>

  <%= form.label :fiscal_year_end, class: "text-xs text-miru-black-1000" %>
  <%= form.text_field :fiscal_year_end, class: "p-2 w-full bg-miru-grey-200 text-sm" %><br>

  <%= form.label :date, class: "text-xs text-miru-black-1000" %>
  <%= form.date_field :date, class: "p-2 w-full bg-miru-grey-200 text-sm" %><br>

  <div class="actions">
    <%= form.submit "SAVE ORG DETAILS", class: "mt-5 p-2 w-full bg-indigo-600 font-bold text-white text-base hover:bg-indigo-700 cursor-pointer" %>
  </div>
<% end %>
