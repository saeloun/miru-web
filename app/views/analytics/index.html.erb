<div class="analytics-dashboard container mx-auto px-4 py-8">
  <div class="header mb-8">
    <h1 class="text-3xl font-bold text-gray-900">Analytics Dashboard</h1>
    <p class="text-gray-600 mt-2">
      Welcome, <%= current_user.full_name %>
      <% if current_user.super_admin? %>
        <span class="ml-2 px-2 py-1 bg-purple-100 text-purple-800 text-xs rounded-full">Super Admin</span>
      <% end %>
    </p>
  </div>

  <!-- Overview Cards -->
  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 mb-8">
    <div class="bg-white rounded-lg shadow p-6">
      <div class="flex items-center justify-between">
        <div>
          <p class="text-sm font-medium text-gray-600">Total Revenue</p>
          <p class="text-2xl font-bold text-gray-900">
            <%= number_to_currency(@analytics_data[:overview][:total_revenue]) %>
          </p>
        </div>
        <div class="p-3 bg-green-100 rounded-full">
          <svg class="w-6 h-6 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
          </svg>
        </div>
      </div>
    </div>

    <div class="bg-white rounded-lg shadow p-6">
      <div class="flex items-center justify-between">
        <div>
          <p class="text-sm font-medium text-gray-600">Outstanding</p>
          <p class="text-2xl font-bold text-yellow-600">
            <%= number_to_currency(@analytics_data[:overview][:outstanding_amount]) %>
          </p>
        </div>
        <div class="p-3 bg-yellow-100 rounded-full">
          <svg class="w-6 h-6 text-yellow-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
          </svg>
        </div>
      </div>
    </div>

    <div class="bg-white rounded-lg shadow p-6">
      <div class="flex items-center justify-between">
        <div>
          <p class="text-sm font-medium text-gray-600">Overdue</p>
          <p class="text-2xl font-bold text-red-600">
            <%= number_to_currency(@analytics_data[:overview][:overdue_amount]) %>
          </p>
        </div>
        <div class="p-3 bg-red-100 rounded-full">
          <svg class="w-6 h-6 text-red-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"></path>
          </svg>
        </div>
      </div>
    </div>

    <div class="bg-white rounded-lg shadow p-6">
      <div class="flex items-center justify-between">
        <div>
          <p class="text-sm font-medium text-gray-600">Active Clients</p>
          <p class="text-2xl font-bold text-gray-900">
            <%= @analytics_data[:overview][:active_clients] %>
          </p>
        </div>
        <div class="p-3 bg-blue-100 rounded-full">
          <svg class="w-6 h-6 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"></path>
          </svg>
        </div>
      </div>
    </div>
  </div>

  <!-- Navigation Tabs -->
  <div class="bg-white rounded-lg shadow mb-8">
    <div class="border-b border-gray-200">
      <nav class="flex -mb-px">
        <a href="#overview" class="py-4 px-6 border-b-2 border-purple-500 font-medium text-sm text-purple-600">
          Overview
        </a>
        <a href="#revenue" class="py-4 px-6 border-b-2 border-transparent font-medium text-sm text-gray-500 hover:text-gray-700">
          Revenue
        </a>
        <a href="#activity" class="py-4 px-6 border-b-2 border-transparent font-medium text-sm text-gray-500 hover:text-gray-700">
          Activity
        </a>
        <a href="#currency" class="py-4 px-6 border-b-2 border-transparent font-medium text-sm text-gray-500 hover:text-gray-700">
          Currency & Exchange
        </a>
        <a href="#users" class="py-4 px-6 border-b-2 border-transparent font-medium text-sm text-gray-500 hover:text-gray-700">
          Users
        </a>
        <a href="#clients" class="py-4 px-6 border-b-2 border-transparent font-medium text-sm text-gray-500 hover:text-gray-700">
          Clients
        </a>
      </nav>
    </div>
  </div>

  <!-- Activity Section -->
  <div class="grid grid-cols-1 lg:grid-cols-2 gap-8 mb-8">
    <div class="bg-white rounded-lg shadow p-6">
      <h3 class="text-lg font-semibold mb-4">Invoice Activity Today</h3>
      <div class="space-y-3">
        <div class="flex justify-between items-center">
          <span class="text-gray-600">Created</span>
          <span class="font-semibold"><%= @analytics_data[:activity][:invoice_activity][:created_today] %></span>
        </div>
        <div class="flex justify-between items-center">
          <span class="text-gray-600">Sent</span>
          <span class="font-semibold"><%= @analytics_data[:activity][:invoice_activity][:sent_today] %></span>
        </div>
        <div class="flex justify-between items-center">
          <span class="text-gray-600">Viewed</span>
          <span class="font-semibold"><%= @analytics_data[:activity][:invoice_activity][:viewed_today] %></span>
        </div>
        <div class="flex justify-between items-center">
          <span class="text-gray-600">Downloaded</span>
          <span class="font-semibold"><%= @analytics_data[:activity][:invoice_activity][:downloaded_today] %></span>
        </div>
      </div>
    </div>

    <div class="bg-white rounded-lg shadow p-6">
      <h3 class="text-lg font-semibold mb-4">Payment Activity</h3>
      <div class="space-y-3">
        <div class="flex justify-between items-center">
          <span class="text-gray-600">Payments Today</span>
          <span class="font-semibold"><%= @analytics_data[:activity][:payment_activity][:payments_today] %></span>
        </div>
        <div class="flex justify-between items-center">
          <span class="text-gray-600">Amount Collected</span>
          <span class="font-semibold text-green-600">
            <%= number_to_currency(@analytics_data[:activity][:payment_activity][:amount_collected_today]) %>
          </span>
        </div>
        <div class="flex justify-between items-center">
          <span class="text-gray-600">Stripe Payments (Month)</span>
          <span class="font-semibold"><%= @analytics_data[:activity][:payment_activity][:stripe_payments] %></span>
        </div>
        <div class="flex justify-between items-center">
          <span class="text-gray-600">Bank Transfers (Month)</span>
          <span class="font-semibold"><%= @analytics_data[:activity][:payment_activity][:bank_transfers] %></span>
        </div>
      </div>
    </div>
  </div>

  <!-- Currency Conversion Section -->
  <div class="bg-white rounded-lg shadow p-6 mb-8">
    <h3 class="text-lg font-semibold mb-4">Currency Conversion Insights</h3>
    
    <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-6">
      <div class="bg-gray-50 rounded p-4">
        <p class="text-sm text-gray-600 mb-1">Currencies in Use</p>
        <p class="text-xl font-bold"><%= @analytics_data[:currency][:currency_distribution].keys.count %></p>
      </div>
      
      <div class="bg-gray-50 rounded p-4">
        <p class="text-sm text-gray-600 mb-1">Conversion Impact</p>
        <p class="text-xl font-bold <%= @analytics_data[:currency][:conversion_savings][:positive_impact] ? 'text-green-600' : 'text-red-600' %>">
          <%= number_to_currency(@analytics_data[:currency][:conversion_savings][:total_impact].abs) %>
          <%= @analytics_data[:currency][:conversion_savings][:positive_impact] ? '↑' : '↓' %>
        </p>
      </div>
      
      <div class="bg-gray-50 rounded p-4">
        <p class="text-sm text-gray-600 mb-1">Invoices with Conversion</p>
        <p class="text-xl font-bold"><%= @analytics_data[:currency][:conversion_savings][:affected_invoices] %></p>
      </div>
    </div>

    <h4 class="font-medium text-gray-700 mb-3">Recent Exchange Rates</h4>
    <div class="overflow-x-auto">
      <table class="min-w-full divide-y divide-gray-200">
        <thead>
          <tr>
            <th class="px-4 py-2 text-left text-xs font-medium text-gray-500 uppercase">Date</th>
            <th class="px-4 py-2 text-left text-xs font-medium text-gray-500 uppercase">From</th>
            <th class="px-4 py-2 text-left text-xs font-medium text-gray-500 uppercase">To</th>
            <th class="px-4 py-2 text-left text-xs font-medium text-gray-500 uppercase">Rate</th>
            <th class="px-4 py-2 text-left text-xs font-medium text-gray-500 uppercase">Source</th>
          </tr>
        </thead>
        <tbody class="divide-y divide-gray-200">
          <% @analytics_data[:currency][:exchange_rates].first(5).each do |rate| %>
            <tr>
              <td class="px-4 py-2 text-sm"><%= rate[:date] %></td>
              <td class="px-4 py-2 text-sm font-medium"><%= rate[:from] %></td>
              <td class="px-4 py-2 text-sm font-medium"><%= rate[:to] %></td>
              <td class="px-4 py-2 text-sm"><%= number_with_precision(rate[:rate], precision: 4) %></td>
              <td class="px-4 py-2 text-sm">
                <span class="px-2 py-1 text-xs rounded-full <%= rate[:source] == 'api' ? 'bg-green-100 text-green-800' : 'bg-gray-100 text-gray-800' %>">
                  <%= rate[:source] %>
                </span>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>

  <!-- Recent Activity Log -->
  <div class="bg-white rounded-lg shadow p-6">
    <h3 class="text-lg font-semibold mb-4">Recent Activity</h3>
    <div class="space-y-3">
      <% @analytics_data[:activity][:recent_events].first(10).each do |event| %>
        <div class="flex items-start space-x-3 py-2 border-b last:border-0">
          <div class="flex-shrink-0">
            <div class="w-2 h-2 bg-green-400 rounded-full mt-1.5"></div>
          </div>
          <div class="flex-1">
            <p class="text-sm">
              <span class="font-medium"><%= event[:user] || 'System' %></span>
              <%= event[:name].humanize.downcase %>
              <% if event[:properties]['type'] == 'invoice' %>
                invoice #<%= event[:properties]['id'] %>
              <% end %>
            </p>
            <p class="text-xs text-gray-500"><%= time_ago_in_words(event[:time]) %> ago</p>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>