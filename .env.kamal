# Hetzner Deployment Configuration
# Copy this file to .env.kamal.local and fill in the actual values

# Hetzner Server Configuration
HETZNER_SERVER_IP=YOUR_HETZNER_SERVER_IP
HETZNER_API_TOKEN=YOUR_HETZNER_API_TOKEN
SSH_USER=root

# GitHub Container Registry
GITHUB_USERNAME=saeloun
GITHUB_TOKEN=YOUR_GITHUB_PERSONAL_ACCESS_TOKEN

# Database Configuration
DATABASE_URL=postgresql://miru_2_0_upgrade:YOUR_DB_PASSWORD@localhost:5432/miru_2_0_upgrade
POSTGRES_PASSWORD=YOUR_SECURE_DB_PASSWORD

# Rails Configuration
RAILS_MASTER_KEY=YOUR_RAILS_MASTER_KEY
SECRET_KEY_BASE=YOUR_SECRET_KEY_BASE

# AWS S3 Configuration (for file uploads)
AWS_ACCESS_KEY_ID=YOUR_AWS_ACCESS_KEY
AWS_SECRET_ACCESS_KEY=YOUR_AWS_SECRET_KEY
AWS_REGION=us-east-1
AWS_BUCKET=miru-2-0-upgrade-uploads

# Stripe Configuration (can use test keys for review app)
STRIPE_API_KEY=sk_test_YOUR_TEST_KEY
STRIPE_PUBLISHABLE_KEY=pk_test_YOUR_TEST_KEY

# Sentry (optional for review app)
SENTRY_DSN=

# Google OAuth (optional for review app)
GOOGLE_OAUTH_CLIENT_ID=
GOOGLE_OAUTH_CLIENT_SECRET=